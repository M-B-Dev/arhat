<Content>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

<Item>

    ImageLeftWidget:
        texture: root.texture
    
<ButtonTemplate>:
    on_release: 
        app.root.ids.nav_drawer.set_state("close")
        app.root.ids.screen_manager.current = self.id if self.id != "Logout" else "Login"
        if self.id == "Logout": app.root.ids.nav_drawer.children[0].ids.scroll.children[0].logged_out_buttons()
        if self.id == "Edit Profile": app.root.ids.screen_manager.children[0].set_text_fields()
        if self.id == "Contacts": app.root.ids.screen_manager.children[0].show_users()
        if self.id == "Messages": app.root.ids.screen_manager.children[0].show_messages()
        
<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        Image:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            source: "app/static/images/logo.png"

    MDLabel:
        text: "Arhat"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:
        id: scroll
        List:
            id: list
            name: 'List'


            

Screen:
    BoxLayout:
        orientation: "vertical"
        pos_hint: {"center_x": .5, "center_y": .5}


        MDToolbar:
            id: toolbar
            title: app.title
            md_bg_color: app.theme_cls.primary_color
            background_palette: "Primary"
            elevation: 10
            left_action_items: [['menu', lambda x: nav_drawer.set_state('open')]]

        NavigationLayout:
            x: toolbar.height

            ScreenManagement:
                id: screen_manager
                
                Login:
                    id: Login
                    name: 'Login'
                    username: username
                    password: password
                    manager: screen_manager
                    BoxLayout:
                        orientation: "vertical"

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height
                            padding: dp(48)
                            spacing: 10

                            MDTextField:
                                id: username
                                hint_text: "Username"
                                required: True
                                mode: "rectangle"
                                pos_hint: {"center_x": 0.5, "center_y": 0.8}

                            MDTextField:
                                id: password
                                hint_text: "Password"
                                required: True
                                mode: "rectangle"
                                password: True
                                pos_hint: {"center_x": 0.5, "center_y": 0.5}

                            MDRaisedButton:
                                text: "Login"
                                pos_hint: {"center_x": 0.5, "center_y": 0}
                                on_release: 
                                    screen_manager.current = 'Tasks' if Login.login_user() else 'Login'
                                    if screen_manager.current == 'Tasks': Tasks.load_tasks()
                                    if screen_manager.current == 'Tasks': root.ids.nav_drawer.children[0].ids.scroll.children[0].logged_in_buttons()
                        Widget:



                Tasks:
                    id: Tasks
                    name: 'Tasks'
                    manager: screen_manager
                    token: Login.token
                    user_id: Login.user_id
                    ScrollView:
                        BoxLayout:
                            orientation: "vertical"
                            BoxLayout:
                                orientation: "vertical"
                                size_hint_y: None
                                height: self.minimum_height
                                padding: dp(48)
                                spacing: 10




                            Widget:     
                
                NewTask:
                    id: NewTask
                    name: 'New Task'
                    manager: screen_manager
                    token: Login.token
                    user_id: Login.user_id
                    task_description: task_description
                    start_time: start_time
                    end_time: end_time
                    frequency: frequency
                    start_date: start_date
                    end_date: end_date

                    BoxLayout:
                        orientation: "vertical"

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height
                            padding: dp(48)
                            spacing: 10
                            MDLabel:
                                text: "Create a new task: "
                                theme_text_color: "Primary"
                                halign: "left"
                            MDRaisedButton:
                                text: "Enter the task date"
                                required: True
                                halign: "left"
                                on_release: NewTask.show_date_picker("start")
                            
                            MDLabel:
                                id: start_date
                                theme_text_color: "Primary"
                                halign: "left"



                            MDRaisedButton:
                                text: "When does the task start?"
                                required: True
                                halign: "left"
                                on_release: NewTask.show_start_time_picker()

                            MDLabel:
                                id: start_time
                                theme_text_color: "Primary"
                                halign: "left"

                            MDRaisedButton:
                                text: "When does the task end?"
                                required: True
                                halign: "left"
                                on_release: NewTask.show_end_time_picker()

                            MDLabel:
                                id: end_time
                                theme_text_color: "Primary"
                                halign: "left"
                                


                            MDRaisedButton:
                                text: "If you would like this task to stop repeating on a certain date, enter it here"
                                required: True
                                halign: "left"
                                on_release: NewTask.show_date_picker("end")
                            
                            MDLabel:
                                id: end_date
                                theme_text_color: "Primary"
                                halign: "left"
                            MDTextField:
                                id: task_description
                                hint_text: "Describe your task"
                                required: True
                                mode: "rectangle"
                                pos_hint: {"center_x": 0.5, "center_y": 1}
                            MDTextField:
                                id: frequency
                                hint_text: "If you would like this task to repeat, how often?"
                                mode: "rectangle"
                                pos_hint: {"center_x": 0.5, "center_y": 1}
                            MDRaisedButton:
                                text: "Create your task"
                                pos_hint: {"center_x": 0.5, "center_y": 0.4}
                                on_release:
                                    NewTask.create_new_task() 
                                    Tasks.load_tasks()
                                    screen_manager.current = 'Tasks'
                        Widget:     

                Register:
                    id: Register
                    name: 'Register'
                    rusername: rusername
                    email: email
                    password1: password1
                    password2: password2

                    BoxLayout:
                        orientation: "vertical"

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height
                            padding: dp(48)
                            spacing: 10
                            MDTextField:
                                id: rusername
                                hint_text: "Username"
                                required: True
                                mode: "rectangle"
                                pos_hint: {"center_x": 0.5, "center_y": 0.9}

                            MDTextField:
                                id: email
                                hint_text: "Email"
                                required: True
                                mode: "rectangle"
                                pos_hint: {"center_x": 0.5, "center_y": 0.85}

                            MDTextField:
                                id: password1
                                hint_text: "Enter your password"
                                required: True
                                mode: "rectangle"
                                password: True
                                pos_hint: {"center_x": 0.5, "center_y": 0.7}

                            MDTextField:
                                id: password2
                                hint_text: "Re-enter your password"
                                required: True
                                mode: "rectangle"
                                password: True
                                pos_hint: {"center_x": 0.5, "center_y": 0.55}

                            MDRaisedButton:
                                text: "Register"
                                pos_hint: {"center_x": 0.5, "center_y": 0.4}
                                on_release: 
                                    screen_manager.current = 'Login' if Register.register_new_user() else 'Register'
                                    screen_manager.transition.direction = "right"

                        Widget:

                EditProfile:
                    id: EditProfile
                    name: 'Edit Profile'
                    manager: screen_manager
                    user: Login.user
                    internal_password: Login.internal_password
                    token: Login.token

                    BoxLayout:
                        orientation: "vertical"

                        BoxLayout:
                            orientation: "vertical"
                            size_hint_y: None
                            height: self.minimum_height
                            padding: dp(48)
                            spacing: 10

                        Widget:
                
                Contacts:
                    id: Contacts
                    name: 'Contacts'
                    manager: screen_manager
                    user: Login.user
                    token: Login.token
                    user_id: Login.user_id

                    BoxLayout:
                        orientation: "vertical"
                        ScrollView:
                            BoxLayout:

                                orientation: "vertical"
                                size_hint_y: None
                                size_hint_x: None
                                padding: dp(48)
                                spacing: 10
                                size: [(self.parent.width/2)+(self.parent.width/16), self.minimum_height]

                Messages:
                    id: Messages
                    name: 'Messages'
                    manager: screen_manager
                    user: Login.user
                    token: Login.token
                    user_id: Login.user_id

                    BoxLayout:
                        orientation: "vertical"
                        ScrollView:
                            BoxLayout:

                                orientation: "vertical"
                                size_hint_y: None
                                size_hint_x: None
                                padding: dp(48)
                                spacing: 10
                                size: [(self.parent.width/2)+(self.parent.width/16), self.minimum_height]


            MDNavigationDrawer:
                id: nav_drawer

                ContentNavigationDrawer:
                    id: content
                    screen_manager: screen_manager
                    nav_drawer: nav_drawer