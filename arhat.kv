WindowManager:
    id: window_manager
    MainWindow:
        id: main
        name: 'main'
        manager: window_manager
    SecondWindow:
        name: 'second'
        manager: window_manager
        label_text: main.data


<MainWindow>
    name: "main"
    username: username
    password: password
    
    GridLayout:
        cols: 1
        size: root.width, root.height

        GridLayout:
            cols: 2

            Label:
                text: "Username: "
            TextInput:
                id: username
                multiline: False
            
            Label:
                text: "Password: "
            TextInput:
                id: password
                multiline: False
                password: True
            
        Button:
            text: "Submit"
            on_release:
                app.root.current = "second" if root.pressed() else "main"
                root.manager.transition.direction = "left"

<SecondWindow>
    name: "second"

    GridLayout:
        cols: 1
        
        Label:
            text: root.label_text
        Button:
            text: "Go Back"
            on_release:
                app.root.current = 'main'
                root.manager.transition.direction = "right"